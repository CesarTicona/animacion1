<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.cesar.amimaciones_study_jam.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/primerColor">

        <ImageView
            android:id="@+id/minion"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/imagen1"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/minion2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/imagen2"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:background="@color/segundoColor">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal">

                <Button
                    android:text="ZoomIn"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="zoomin"/>

                <Button
                    android:text="ZoomOut"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="zoomout"/>
                <Button
                    android:text="FadeIn"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="fadein"/>
                <Button
                    android:text="FadeOut"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="fadeout"/>

                <Button
                    android:text="SlideUp"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="slideup"/>
                <Button
                    android:text="SlideDown"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="slidebown"/>
                <Button
                    android:text="Rotate"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="rotate"/>
                <Button
                    android:text="Move"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="move"/>
                <Button
                    android:text="Blink"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="blink"/>
                <Button
                    android:text="Bounce"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="bounce"/>
                <Button
                    android:text="Cross Fade"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="crossfade"/>
                <Button
                    android:text="Sequential"
                    android:textAllCaps="false"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:onClick="sequential"/>
            </GridLayout>

    </LinearLayout>

</LinearLayout>
